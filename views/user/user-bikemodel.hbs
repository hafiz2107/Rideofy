
<section style="padding-top:50px;padding-bottom:30px;margin-bottom:-100px">
    <div class="container heading">

        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
                <p class="subheading">JUST A STEP AWAY</p>
                <h2>CHOOSE YOUR BIKE MODEL</h2>
            </div>

            <div class="col-xs-6 col-sm-6 col-md-6" style="display:flex;justify-content:end">
                {{!-- <img src="/bike brand logos/{{models._id}}__1.jpg" style="height:100px;width:100px" alt="client">  --}}
                <h2 style="color: red;">{{models.bikeBrand}}</h2>
            </div>

        </div>

    </div>

    <div class="row product-boxes ">

        {{#each models.models}}
        <div class="col-md-3 product-box">

            <a href="/getproductsonbikemodel/{{this.bikemodels}}">

                <div class="product-img" style="display:flex; justify-content:center;">
                    <img src="/bike model logos/{{this.id}}__1.jpg" style="height:150px;width:250px"
                        alt="Product" />
                </div>

                <div class="text-center">
                    
                    <h6 style="margin-top: 6px;">{{this.bikemodels}}</h6>
                </div>

            </a>

        </div>
        {{/each}}


    </div>
</section>