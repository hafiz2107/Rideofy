{{!-- User Login page --}}
<center>
    <section id="signIn" class="sign ">
      <div class="container">
        <div class="row">
          <div class="col-xs-12  col-sm-12  col-md-12 mysign" style="background-color: rgba(255, 0, 0, 0);">
                  <div class="modal-body" style="background-color: rgba(0, 0, 255, 0);">
                    
                    {{!-- <p>Welcome Back</p> --}}
                    <img src="/images/logo.png" alt="" class="myImg1">
                    <h6 style="margin-top: 25px;">Create A New Password</h6>
                    <div class="sign-form" style="width: 50%;">

                        {{#if newPassError}}
                            <p>The password is invalid</p>
                        {{/if}}
                        {{!-- Signin Form --}}
                      <form class="mb-0 myLoginForm" action="/resetpassword" method="POST" id="resetpass">
                        <div class="form-group">
                          <input type="password" class="form-control " id="npass" name="newpass" placeholder="Enter New Password">
                          <input type="password" class="form-control " id="cnpass" name="cnpass" placeholder="Confirm Password">
                          
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                      </form>
                    </div>
                  </div>
         </div>
        </div>
      </div>
    </section>
    </center>
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>
      <script>
        $(document).ready(function (){
          $('#resetpass').validate({
            rules : {
              newpass : {
                required : true,
                minlength :6,
              },
              cnpass : {
                required : true,
                equalTo : '#npass',
                minlength : 6,
              },
            }
          })
        })
      </script>