{{!-- User Login page --}}
<center style="margin: auto;">
    <section id="signIn" class="sign " >
      <div class="container">
        <div class="row">
          <div class="col-xs-12  col-sm-12  col-md-12 mysign" style="background-color: rgba(255, 0, 0, 0);">
                  <div class="modal-body" style="background-color: rgba(0, 0, 255, 0); margin-top: 105px;">
                    
                    {{!-- <p>Welcome Back</p> --}}
                    <img src="/images/logo.png" alt="" class="myImg1">
                    <h4 class="mt-3">ADMINISTRATOR</h4>
                    <div class="sign-form" style="width: 50%;">
                        {{!-- Signin Form --}}

                        {{#if error}}
                            <h6 style="color: red;">Incorrect email or password</h6>
                        {{/if}}

                      <form class="mb-0 myLoginForm" action="/admin" method="post" id="loginform">
                        <div class="form-group">
                          <input type="text" class="form-control " id="username" name="username" placeholder="User Name">
                        </div>
                        <div class="form-group">
                          <input type="password" class="form-control" id="pwd" name="pwd" placeholder="Password">
                        </div>
                          
                            <div class="mt-5">
                        <button type="submit" class="btn btn-primary btn-block" class="mt-5">Sign In</button>
                        </div>
                      </form>

                    </div>
                  </div>
         </div>
        </div>
      </div>
    </section>
    </center>



      
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
  <script>
    $(document).ready(function(){
      $('#loginform').validate({
        rules:{
          username : {
            required : true,
            minlenght : 5,
          },
          pwd : {
            required : true,
            minlength : 6,
          } 
        }
      })
    })
  </script>

